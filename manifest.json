{
	"name": "Jira epic estimates summarizer",
	"version": "1.0",
	"description": "Shows estimates summaries and percentage done (base on estimates) in the epics details in Jira Cloud next-gen projects",
	"author": "Henrik Gunnarsson",
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	},
	"page_action" :
	{
		"default_icon" : "icon-32x32.png"
	},
	"content_scripts": [
		{
			"matches": ["https://*.atlassian.net/browse/*"],
			"css": ["styles.css"],
			"js": ["script.js"]
		}
	],
	"permissions" : [
		"tabs",
		"https://*.atlassian.net/browse/*"
	],
	"icons" : {
		"16" : "icon-16x16.png",
		"32" : "icon-32x32.png",
		"48" : "icon-48x48.png",
		"128" : "icon-128x128.png"
	},
	"manifest_version": 2
}
